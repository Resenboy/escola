<h2>Registrar</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


<div class="row">
  <div class="col-lg-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>
</div>

<br>
<div class="row">
  <div class="col-lg-4">
    <%= f.label :password, "Senha" %>
    <% if @minimum_password_length %>
    <em>(Utilize pelo menos <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>
</div>

<br>
<div class="row">
  <div class="col-lg-4">
    <%= f.label :password_confirmation, "Confimar Senha" %>
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "off", 
        class: "form-control"%>
  </div>
</div>

<br>
  <div class="actions">
    <%= f.submit "Registrar", class: "btn btn-primary btn-lg" %>  
    <%= link_to "Voltar ao Login", new_session_path(resource_name), class: "btn btn-default btn-lg" %><br />
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
