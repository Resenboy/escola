<p id="notice"><%= notice %></p>

<h2>Cursos</h2>


  <%= link_to 'Novo Curso', new_curso_path,class: 'btn btn-success btn-lg col-sm-2' %>
  <br>
  <br>
  <br>

<table class= "table table-striped text-center">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Area</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @cursos.each do |curso| %>
      <tr>
        <td class="text-left"><%= curso.nome %></td>
        <td><%= curso.area %></td>
        <td><%= link_to 'Mostrar', curso, class: 'btn btn-default' %>
        <%= link_to 'Editar', edit_curso_path(curso), class: 'btn btn-primary' %>
        <%= link_to 'Excluir', curso, class: 'btn btn-danger' , method: :delete, data: { confirm: 'Você tem certeza ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

