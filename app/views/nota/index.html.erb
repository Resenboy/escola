<p id="notice"><%= notice %></p>

<h1>Últimas Notas Lançadas</h1>
<br>
<%= link_to 'Inserir Nota', new_notum_path, class: "btn btn-success btn-lg" %>


<table class= "table table-striped">
  <thead>
    <tr>
      <th>Curso</th>
      <th>Aluno</th>
      <th>Professor</th>
      <th>Data</th>
      <th>Nota1</th>
      <th>Nota2</th>
      <th>Nota3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nota.each do |notum| %>
      <tr>
        <td><%= notum.curso.nome %></td>
        <td><%= notum.aluno.nome %></td>
        <td><%= notum.professor.nome %></td>
        <td><%= notum.data %></td>
        <td><%= notum.nota1 %></td>
        <td><%= notum.nota2 %></td>
        <td><%= notum.nota3 %></td>
        <td><%= link_to 'Exibir Nota', notum, class: "btn btn-default" %>
        <%= link_to 'Corrigir Nota', edit_notum_path(notum), class: "btn btn-primary" %>
        <%= link_to 'Apagar Nota', notum, method: :delete, data: { confirm: 'Deseja apagar esta nota?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

